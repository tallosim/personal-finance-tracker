{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "eol-last": [
            "warn",
            "always"
        ],
        "@typescript-eslint/no-unused-vars": [
            "warn", {
                "argsIgnorePattern": "^_|^req|^res|^next"
            }
        ]
    }
}